
@{
    ViewBag.Title = "Client Group";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = null;
}

@*<script src="@Url.Content("~/Scripts/jquery-1.9.0.min.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/jquery-ui-1.9.2.min.js")" type="text/javascript"></script>
<link href="~/Scripts/jtable/themes/metro/blue/jtable.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/jquery.ui.all.css" rel="stylesheet" />
<script src="~/Scripts/jtable/jquery.jtable.min.js"></script>
<section class="content-header">
    <h1>
        Blank page
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <div id="clientGroup"></div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>

<script type="text/javascript">
    $(document).ready(function () {
        $('#clientGroup').jtable({
            messages: {
                addNewRecord: 'Create'
            },
            title: 'The ClientGroup List',
            paging: true,
            pageSize: 10,
            sorting: true,
            defaultSorting: 'groupname ASC',
            actions: {
                listAction:'@Url.Action("ClientGroupList")',
                deleteAction: '/ClientGroup/DeleteClientGroup',
                updateAction: '/ClientGroup/UpdateClientGroup',
                createAction: '/ClientGroup/CreateClientGroup'
            },
            fields: {
                id: {
                    key: true,
                    create: false,
                    edit: false
                },
                groupname: {
                    title: 'Group Name',
                    width: '23%'
                }
            },

        });
        //Load student list from server
        $('#clientGroup').jtable('load');
    })
</script>

