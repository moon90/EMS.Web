@model IEnumerable<EMS.Web.DTO.adminrole>
@{
    ViewBag.Title = "Admin Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
<script src="~/Content/AdminLTE/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/AdminLTE/plugins/datatables/dataTables.bootstrap.min.js"></script>
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table id="example2" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>SL</th>
                        <th>Role Name</th>
                        <th>Actions</th>                     
                    </tr>
                </thead>
                @{
                    int count = 1;
                 }
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@count</td>
                            <td>@Html.DisplayFor(modelItem => item.name)</td>
                            <td>
                                
                                @Html.ActionLink("Manage", "Details", new { id = item.id }) 
                                
                            </td>
                            
                        </tr>
                        count++;
                    }
                    
                </tbody>
                <tfoot>
                    <tr>
                        <th>SL</th>
                        <th>Role Name</th>
                        <th>Actions</th>     
                    </tr>
                </tfoot>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>

<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>



