@using EMS.Web.Areas.Admin.Models
@model IEnumerable <EMS.Web.Areas.Admin.Models.BulkMailVM>
@{
    ViewBag.Title = "FileUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Blank page
        <small>it all starts here</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("FileUpload", "BulkEmail", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="uploaded_file" />
                <input type="submit" value="Import" />
            }

            @if (Model.Count() > 0)
            {
                <hr />
                <table cellpadding="5" cellspacing="5">
                    <tr>
                        <th>Email</th>
                        <th>Name</th>
                    </tr>
                    @foreach (BulkMailVM bulkMail in Model)
                    {
                        <tr>
                            <td>@bulkMail.Email</td>
                            <td>@bulkMail.FirstName</td>
                        </tr>
                    }
                </table>
            }
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            Footer
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>

<style type="text/css">
    td, th{
        padding:5px;
    }
</style>

